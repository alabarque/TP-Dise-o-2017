{{#partial "contenido"}}

<div class="container-fluid text-center pt-5 my-4 w-auto wider reverse">
<!--Card-->
<div class="card card-cascade wider reverse my-4">
    <!--Card content-->
    <div class="card-body text-center">
      <p class="text-uppercase font-weight-bold">Consultar Indicadores</p>
  <form id="form">    
  <label>Empresa: </label>   
  <input id="empresa" class="text-center" value="{{empresa}}" form="form" readOnly="true" /> 
<br/>             
	<label>Año: </label>               
<select class="mdb-select" id="anio" form="form" required/>
<option value="">(Seleccionar)</option>
{{#each periodos}}
    <option value="{{periodo}}">{{periodo}}</option>
{{/each}}    
</select>   
<br/>
<button class="btn btn-primary" onclick="Evaluar()">Listar Indicadores</button>
 

</form>
<script>
function Evaluar() {
    var empresa = document.getElementById("empresa");
    var anio = document.getElementById("anio");
    var indicador = document.getElementById("indicador");
    this.form.action="/indicadores/" + empresa.value + "/" + anio.value + "/";
}
</script>
<br/>
    </div>
    <!--/.Card content-->

</div>
<!--/.Card-->
   </div>
{{/partial}}

